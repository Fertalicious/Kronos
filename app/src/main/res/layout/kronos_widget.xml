<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/widget_margin" android:background="#CC4D6066">

    <TextView android:id="@+id/appwidget_text_countdown" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff" android:textSize="20sp" android:textStyle="bold|italic"
        android:contentDescription="@string/appwidget_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView android:id="@+id/appwidget_text_date" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff" android:textSize="14sp" android:textStyle="bold|italic"
        android:contentDescription="@string/appwidget_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView android:id="@+id/appwidget_text_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff" android:textSize="14sp" android:textStyle="bold|italic"
        android:contentDescription="@string/appwidget_text"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@android:drawable/ic_menu_rotate"
        android:background="@null"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonNext"
        android:src="@android:drawable/ic_menu_send"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>