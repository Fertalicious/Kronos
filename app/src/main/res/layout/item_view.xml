<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="66dp"
            android:id="@+id/dateIconImageView"
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/targetDateTextView"
            android:layout_weight="0.12" />

        <GridLayout
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:paddingLeft="22dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/dateTimeTextView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/targetDateTextView"
                android:layout_below="@+id/titleTextView"
                android:layout_alignLeft="@+id/titleTextView"
                android:layout_alignStart="@+id/titleTextView"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/titleTextView"
                android:layout_below="@+id/dateTimeTextView"
                android:layout_alignLeft="@+id/dateTimeTextView"
                android:layout_alignStart="@+id/dateTimeTextView"
                android:layout_row="0"
                android:layout_column="0" />
        </GridLayout>

    </LinearLayout>

</RelativeLayout>
